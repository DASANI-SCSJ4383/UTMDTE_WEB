
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Lecturer/Views/Shared/AppLayout.cshtml";
}

@model CourseViewModel

@section breadcrumb {
<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb my-0 ms-2">
      <li class="breadcrumb-item">
        <!-- if breadcrumb is single--><span>Set Form</span>
      </li>
    </ol>
  </nav>
</div>
}

<div class="body flex-grow-1 px-3">
    <div class="container-lg">
        @foreach (var course in Model.Courses!)
        {
            <div class="card mb-3">
              <div class="card-body">
                  <div class="row">
                      <div class="col">
                        <h5 class="card-title">@course.Code - @course.Title</h5>
                        <p class="card-text">SECTION: @course.Section</p>
                        <p class="card-text">@(course.Form != null ? course.Form.Title!.ToUpper() : "NONE")</p>
                      </div>
                      <div class="col-3 text-end align">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Form", new { area = "Lecturer", CourseID = course.ID})" role="button">@(course.Form == null ? "SET FORM" : "UPDATE FORM")</a>
                      </div>
                  </div>
              </div>
            </div>
        }
    </div>
</div>
